<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="aiopk_view_move_form_inherit" model="ir.ui.view">
        <field name="name">aiopk.account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']//group[hasclass('oe_invoice_lines_tab')]//field[@name='tax_totals']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']//group[hasclass('oe_invoice_lines_tab')]//field[@name='tax_totals']" position="after">
                <field name="rounded_tax_totals" widget="account-tax-totals-field-for-round" nolabel="1" colspan="2"
                                                   attrs="{'readonly': ['|', ('state', '!=', 'draft'), '&amp;', ('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt')), ('quick_edit_mode', '=', False)]}" options="{'digits': [0, 0]}"/>

            </xpath>
        </field>
    </record>
</odoo>
