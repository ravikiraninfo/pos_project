<?xml version="1.0" encoding="UTF-8"?>
<!--    Add a popup window-->
<templates id="template" xml:space="preserve">
   <t t-name="PricesPopup" owl="1">
      <div class="popup product-line-popup">
         <main class="body">
            <div>
               <header>
                  <h3>
                     <span>Select Price Category</span>
                      <i class="fa fa-times" style="float:right"
                         t-on-click="cancel"/>
                      <hr/>
                  </h3>
                   <select t-ref="priceRef" class="price_select"
                           style="width:35%;height:30px;border-radius:5px;">
                       <t t-foreach='props.prices || []'
                          t-as='price' t-key="price.id">
                            <t t-log="price"/>
                           <option t-att-value='price.name'
                                   t-att-id="price.id">
                                <t t-esc='price.name'/>
                            </option>
                       </t>
                   </select>
               </header>
            </div>
         </main>
          <footer class="footer cash-move">
            <div class="button confirm disable highlight" t-on-click="confirm">
                            Confirm
                        </div>
              <div class="button cancel" t-on-click="cancel">
                    Cancel
            </div>
         </footer>
      </div>
   </t>
</templates>