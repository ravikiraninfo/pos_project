<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ManagerPasswordPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup">
                <p class="title">Password Required
                    <i class="fa fa-times" style="float:right" t-on-click="cancel"/>
                </p>
                <p class="body">
                    <input class="o_manager_password_input" type="text" placeholder="Password"/>
                </p>
                <div class="footer">
                    <div class="button cancel" t-on-click="confirm">
                        Ok
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
