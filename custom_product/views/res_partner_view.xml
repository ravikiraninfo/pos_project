<odoo>
    <record id="view_customer_form_inherit_code" model="ir.ui.view">
        <field name="name">Credit Limit Code</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="supplier_code"/>
                <field name="vendor_code"/>
                <field name="tin_no"/>
                <field name="legder_name"/>
                <field name="pan_card"/>
                <field name="gst_type"/>
                <field name="gst_no"/>
                <field name="vendor_rating" widget="priority"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Purchase History">
                    <field name="purchase_order_history">
                        <tree>
                            <field name="order_id"/>
                            <field name="partner_id"/>
                            <field name="partner_rf"/>
                            <field name="product_uom_qty"/>
                            <field name="price_total"/>
                        </tree>
                    </field>
                </page>
                <page string="Communication">
                    <field name="communication_history"/>
                </page>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_form_pt" model="ir.ui.view">
        <field name="name">purchase.order.form.pt</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="print_product_label" string="Print Product Label" type="object" class="oe_highlight"
                        context="{'create_bill':True}"
                        attrs="{'invisible': ['|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}"
                       />
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="product_template_id_1" widget="many2many_tags"/>
                <field name="attatchmet_ids" widget="many2many_binary"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="string">Bill Reference</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                <field name="vendor_product_code"/>
                <field name="hsn_code"/>
            </xpath>
        </field>
    </record>

    <record id="sequence_customer" model="ir.sequence">
        <field name="name">Customer</field>
        <field name="code">res.partner</field>
        <field name="active">TRUE</field>
        <field name="prefix">KSG</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

</odoo>