<odoo>
    <record model="ir.ui.view" id="payment_due_form">
        <field name="name">Payments</field>
        <field name="model">account.payment.due</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_register_payment" string="Register Payments"
                            type="object" class="oe_highlight"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Due Payments">
                            <field name="invoice_ids">
                                <tree editable="bottom">
                                    <field name="select"/>
                                    <field name="name"/>
                                    <field name="amount_total_signed"/>
                                    <field name="payment_state" widget="badge"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="purchase_order_form_pt" model="ir.ui.view">
        <field name="name">purchase.order.form.pt</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="print_product_label" string="Print Product Label" type="object" class="oe_highlight"
                        context="{'create_bill':True}"
                        attrs="{'invisible': ['|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'in', ('no', 'invoiced'))]}"
                       />
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="product_template_id_1" widget="many2many_tags"/>
                <field name="attatchmet_ids" widget="many2many_binary"/>
                <field name="total_extra_cost" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="string">Bill Reference</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                <field name="vendor_product_code"/>
                <field name="hsn_code"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="Extra Costs">
                    <field name="extra_cost_ids" widget="one2many">
                        <tree string="Extra Costs" editable="bottom">
                            <field name="name" />
                            <field name="amount" widget="monetary"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//notebook//page[@name='products']//field[@name='order_line']//tree//field[@name='analytic_distribution']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='products']//field[@name='order_line']//tree//field[@name='product_packaging_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='products']//field[@name='order_line']//tree//field[@name='product_packaging_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="payment_due_tree">
        <field name="name">Payments</field>
        <field name="model">account.payment.due</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_check_due_payments">
        <field name="name">Payments</field>
        <field name="res_model">account.payment.due</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_hsn_code">
        <field name="name">HSN Code</field>
        <field name="res_model">hsn.tax</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_purcahse_price_code">
        <field name="name">Purchase Price Code</field>
        <field name="res_model">purchase.price.code</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_check_due_payments" action="action_check_due_payments"
              parent="purchase.menu_procurement_management" name="Payments"/>
    <menuitem id="menu_bill_in_purchase" action="account.action_move_in_invoice_type"
              parent="purchase.menu_procurement_management" name="Bills"/>
    <menuitem id="menu_refund_in_purchaswwe" action="account.action_move_in_refund_type"
              parent="purchase.menu_procurement_management" name="Refunds"/>
    <menuitem id="menu_hsn_code" action="action_hsn_code"
              parent="purchase.menu_purchase_config" name="HSN Code"/>
     <menuitem id="menu_purcahse_price_code" action="action_purcahse_price_code"
              parent="purchase.menu_purchase_config" name="Purchase Price Code"/>



</odoo>