<odoo>
    <record id="product_template_form_view_price" model="ir.ui.view">
        <field name="name">product.template.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="mrp_price" widget="monetary"/>
<!--                <field name="whole_sale_price" widget="monetary"/>-->
            </xpath>
            <xpath expr="//field[@name='detailed_type']" position="after">
<!--                <field name="product_code"/>-->
                <field name="hsn_code"/>
            </xpath>
<!--            <xpath expr="//field[@name='standard_price']" position="attributes">-->
<!--                <attribute name="invisible">1</attribute>-->
<!--            </xpath>-->
            <xpath expr="//notebook" position="inside">
                <page name="Extra Costs">
                    <field name="extra_cost_ids" widget="one2many">
                        <tree string="Extra Costs" editable="bottom">
                            <field name="name" />
                            <field name="amount" widget="monetary"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='general_information']" position="inside">
                <group string="Extra Details">
                    <field colspan="2" name="extra_details_description" nolabel="1" placeholder="This note is only for internal purposes."/>
                </group>
            </xpath>
            
        </field>
    </record>

    <record id="product_product_form_view_price" model="ir.ui.view">
        <field name="name">product.product.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="product_code"/>
                <field name="hsn_code"/>
            </xpath>
        </field>
    </record>
</odoo>