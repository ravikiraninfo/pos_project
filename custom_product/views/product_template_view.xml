<odoo>
    <record id="action_update_sales_price" model="ir.actions.server">
        <field name="name">Upsate Sales Price From List Price</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product" />
        <field name="state">code</field>
        <field name="binding_view_types">tree,form</field>
        <field name="code">
if records:
    records._update_sales_price()
        </field>
    </record>


    <record id="product_template_form_view_price" model="ir.ui.view">
        <field name="name">product.template.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="mrp_price" widget="monetary"/>
<!--                <field name="whole_sale_price" widget="monetary"/>-->
            </xpath>
            <xpath expr="//field[@name='detailed_type']" position="after">
<!--                <field name="product_code"/>-->
                <field name="hsn_code"/>
            </xpath>
           
            <xpath expr="//notebook" position="inside">
                <page name="Extra Costs">
                    <field name="extra_cost_ids" widget="one2many">
                        <tree string="Extra Costs" editable="bottom">
                            <field name="name" />
                            <field name="amount" widget="monetary"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//div[@name='pricing']//field[@name='tax_string']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//notebook//page[@name='general_information']//group[@name='group_standard_price']//div[@name='pricing']" position="after">
                <label for="sales_price_with_tax_editable"/>
                <div name="pricing_incl">
                    <field name="sales_price_with_tax_editable" class="oe_inline" widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
            </xpath>
            <xpath expr="//notebook//page[@name='general_information']" position="inside">
                <group string="Extra Details">
                    <field colspan="2" name="extra_details_description" nolabel="1" placeholder="This note is only for internal purposes."/>
                </group>
            </xpath>
             <xpath expr="//page[@name='sales']/group[@name='sale']/group[@name='pos']/field[@name='pos_categ_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='general_information']//group//group//field[@name='categ_id']" position="after">
                <field name="pos_categ_id" string="Category"/>
            </xpath>
            <xpath expr="//page[@name='general_information']//group//group//field[@name='categ_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='general_information']//group//group[@name='group_standard_price']//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//header//button[@name='action_open_label_layout']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            
        </field>
    </record>

    <record id="product_template_form_view_inherited_l10n" model="ir.ui.view">
        <field name="name">product.template.price.l10n</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="l10n_in.product_template_hsn_code"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_hsn_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='l10n_in_hsn_description']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
        </record>

    <record id="product_product_form_view_price" model="ir.ui.view">
        <field name="name">product.product.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header" position="inside">
                <button name="print_product_label" string="Print Product Label" type="object" class="oe_highlight"
                    />
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="product_code"/>
                <field name="hsn_code"/>
            </xpath>
            <!-- <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="attrs"/>
                <attribute name="invisible"/>
            </xpath> -->
            <!-- <xpath expr="//label[@for='lst_price']" position="replace">  
                <label for="list_price" string="Sales Price"/>
            </xpath> -->
            <!-- <xpath expr="//field[@name='list_price']" position="after">  
                <field name="taxes_id" />
            </xpath> -->
            <!-- <xpath expr="//field[@name='lst_price']" position="replace"/> -->
        </field>
    </record>
</odoo>