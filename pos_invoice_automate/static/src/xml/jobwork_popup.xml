<?xml version="1.0" encoding="UTF-8"?>
<!--    Add a popup window-->
<templates id="template" xml:space="preserve">
   <t t-name="jobworkpopup" owl="1">
      <div class="popup product-line-popup">
         <main class="body">
            <div>
               <header>
                  <h3>
                     <span>Job Work</span>
                      <i class="fa fa-times" style="float:right"
                         t-on-click="cancel"/>
                      <hr/>
                  </h3>
               </header>
                <div class="row">
							<div>
								<span>Customer</span>
							</div>
                    <div style="margin-top: 10px;">
								<input class="name" type="text"  t-model="state.partnerName"  required=""/>
							</div>
						</div>
                <br/>
                <div class="row">
							<div>
								<span>Order Number</span>
							</div>
                    <div style="margin-top: 10px;">
								<input class="name" type="text" t-model="state.orderNumber" required=""/>
							</div>
						</div>
                <br/>
                <div class="row">
							<div>
								<span>Items Detail with Job</span>
							</div>
                     <div style="margin-top: 10px;">
								<input class="name" type="text" t-model="state.itemDetail" required=""/>
							</div>
					</div>
                <br/>
                <div class="row">
                     <div>
								<h2>Select Items</h2>
							</div>
                     <select class="form-select w-25 ms-1" name="aaaa">
                        <option t-foreach="state.productItems" t-as="product" t-key="product" t-att-value="product" t-esc="product"/>
                     </select>
					</div>
                <br/>
                <hr/>
                <div class="row">
                     <div>
								<h2>Services</h2>
							</div>
                     <select class="form-select w-25 ms-1" name="aaaa">
                        <option t-foreach="['Saree Fall', 'Pico', 'Polishing', 'Alteration']" t-as="service" t-key="service" t-att-value="service" t-esc="service"/>
                     </select>
					</div>
                <br/>
                <hr/>
                <div class="row">
                     <div>
								<h2>Select Team</h2>
							</div>
                     <select class="form-select w-25 ms-1" name="aaaa">
                        <option t-foreach="['Team Saree Fall', 'Team Pico', 'Team Polishing', 'Team Alteration']" t-as="service" t-key="service" t-att-value="service" t-esc="service"/>
                     </select>
					</div>
                <br/>
                <hr/>
                     
                <footer class="footer">
						<div style="color: white;background: #6EC89B;border-color: transparent;" class="button confirm"
                             t-on-click="confirm">
                        	Create JobWork
                    	</div>
                    <div style="color:white;background:#D25B5B;border-color: transparent;" class="button cancel"
                         t-on-click="cancelb">
							Cancel
						</div>
					</footer>
            </div>
         </main>
      </div>
   </t>
</templates>