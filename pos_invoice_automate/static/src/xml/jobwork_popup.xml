<?xml version="1.0" encoding="UTF-8"?>
<!--    Add a popup window-->
<templates id="template" xml:space="preserve">
   <t t-name="jobworkpopup" owl="1">
      <div class="row jobwork-popup">
         <!-- <main class="body"> -->
            <div>
               <header>
                  <h1>
                     <span class="jobwork_label">Job Work</span>
                      <i class="fa fa-times" style="float:right"
                         t-on-click="cancel"/>
                      <hr/>
                  </h1>
               </header>
               <div class="row">
						<div>
							<h4 class="jobwork_label">Customer</h4>
						</div>
                  <div class="jobwork_value">
							<input class="name jobwork_input" style="size: 100;" type="text"  t-model="state.partnerName" />
						</div>
					</div>
               <br/>
               <div class="row">
                  <div>
                     <h4 class="jobwork_label">Order Number</h4>
                  </div>
                  <div>
                     <input class="name jobwork_input" type="text" t-model="state.orderNumber" required=""/>
                  </div>
					</div>
                <br/>
                <div class="row">
							<div>
								<h4 class="jobwork_label">Items Detail with Job</h4>
							</div>
                     <div>
								<input class="name jobwork_input" type="text" t-model="state.itemDetail" />
							</div>
					</div>
                <br/>
                <div class="row">
                     <div>
								<h4 class="jobwork_label">Select Items</h4>
							</div>
                     <div class="input_checkbox_div">
                        <t t-foreach="state.productItems" t-as="product" t-key="product.id" t-att-value="product.id" >
                           <div>
                              <input class="input_checkbox" type="checkbox" t-on-change="() => this._onSelectProduct(product.id)" />
                              <t t-esc="product.name" />
                              <input style="text-align:center; font-size: 20px; margin-left: 20px; width: 50px; height: 50px;" t-model="state.currentInputQty" placeholder="QTY" type="number" t-on-change="() => this._onChangeQty(product.id)"/>
                           </div>
                           <br/>
                        </t>
                     </div>
					</div>
                <div class="row">
                     <div>
								<h4 class="jobwork_label">Services</h4>
							</div>
                     <select class="form-select w-25 ms-1 jobwork_input" name="select_service"  t-model="state.selectedService">
                        <option />
                        <option t-foreach="['Saree Fall', 'Pico', 'Polishing', 'Alteration']" t-as="service" t-key="service" t-att-value="service" t-esc="service"/>
                     </select>
					</div>
                 <div>
                  <div class="row">
							<div>
								<h4 class="jobwork_label">Urgent</h4>
							</div>
                    <div>
								<input class="input_checkbox" type="checkbox" t-model="state.isUrgent" />
							</div>
						</div>
            </div>
                <div class="row">
                     <div>
								<h4 class="jobwork_label">Delivery Date</h4>
							</div>
                     <div>
								<input class="name jobwork_input" type="date" t-model="state.deliveryDate"/>
							</div>    
					</div>
                <div class="row">
                     <div>
								<h4 class="jobwork_label">Estimated Delivery Date</h4>
							</div>
                     <div>
								<input class="name jobwork_input" type="date" t-model="state.estimatedDeliveryDate"/>
							</div>    
					</div>
               <hr />
                  
                <footer class="footer">
						<button style="font-size: 18px; height:50px; width:20%; color: white;background: #6EC89B;border-color: transparent; text-align:center;" class="button confirm"
                             t-on-click="confirm">
                        	Create JobWork
                    	</button>
                    <button style="font-size: 18px; height:50px; width:20%; color:white;background:#D25B5B;border-color: transparent;" class="button cancel"
                         t-on-click="cancelb">
							Cancel
						</button>
					</footer>
            </div>
         <!-- </main> -->
      </div>
      <div>
      123456
      </div>
   </t>
</templates>