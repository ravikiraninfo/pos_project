<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="job_work_tree_view" model="ir.ui.view">
        <field name="name">job.work.tree</field>
        <field name="model">job.work</field>
        <field name="arch" type="xml">
            <tree string="Job Work" >
                <field name="order_id" />
                <field name="partner_id" />
                <field name="description" />
                <field name="services" />
                <field name="stage" />
                <field name="payment_status" />
            </tree>
        </field>
    </record>

    <record id="job_work_form_view" model="ir.ui.view">
        <field name="name">job.work.form</field>
        <field name="model">job.work</field>
        <field name="arch" type="xml">
            <form string="Job Work" >
                <sheet string="Job Work">
                    <div class="oe_title pe-0">
                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="priority" widget="priority" class="me-3"/>
                                <field name="vendor_id" class="o_task_name text-truncate w-100 w-md-75 pe-2" placeholder="Task Title..."/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" string="Customer"/>
                            <field name="bill_number" string="Bill No."/>
                            <field name="payment_status" string="Payment Status"/>
                            <field name="product_ids" string="Garments" widget="many2many_tags"/>
                            <field name="description" string="Job Description"/>
                            <field name="delivery_dates" string="Delivery Date"/>
                        </group>
                        <group>
                            <field name="vendor_id" string="Team"/>
                            <field name="estimated_delivery_dates" string="Estimated Completion Date"/>

                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_job_work_kanban">
            <field name="name">job.work.kanban</field>
            <field name="model">job.work</field>
            <field name="arch" type="xml">
                <kanban
                    default_group_by="stage"
                    class="o_kanban_small_column o_kanban_job_work"
                >
                    <!-- examples="project" -->
                    <field name="stage" options='{"group_by_tooltip": {"description": "Description"}}'/>
                    <!-- <field name="user_ids"/> -->
                    <field name="partner_id"/>
                    <field name="description"/>
                    
                    <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <s><field name="order_id" /></s>
                                            <t><field name="order_id"/></t>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="partner_id" />  
                                </div>
                                
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>


    <record id="pos_job_work_view_action" model="ir.actions.act_window">
        <field name="name">Job Works</field>
        <field name="res_model">job.work</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem id="pos_job_work_menu_action"
              name="Job Works"
              parent="point_of_sale.menu_point_of_sale"
              action="pos_job_work_view_action"
              sequence="200" groups="base.group_no_one"/>
</odoo>